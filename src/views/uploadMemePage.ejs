<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DBS401 - Upload Meme</title>
    <!-- Add google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Sansation:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap"
        rel="stylesheet">
    <!-- CSS Files -->
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/components.css">
    <link rel="stylesheet" href="/css/profile.css">
    <link rel="stylesheet" href="/css/responsive.css">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="sansation-regular">
    <!-- Navigation -->
    <%- include('./partials/navbar') %>

        <!-- Main Content Section -->
        <section class="section" style="padding-top: 8rem;">
            <div class="section-header">
                <h2 class="section-title sansation-bold">Upload Meme</h2>
            </div>

            <div class="profile-container">
                <!-- Notification Messages -->
                <% if (typeof success !=='undefined' && success) { %>
                    <div class="notification success">
                        <i class="fas fa-check-circle"></i> Meme uploaded successfully! View it <a
                            href="<%= filePath %>" target="_blank">here</a>.
                    </div>
                    <% } %>

                        <% if (typeof error !=='undefined' && error) { %>
                            <div class="notification error">
                                <i class="fas fa-exclamation-circle"></i>
                                <%= error %>
                            </div>
                            <% } %>

                                <div class="form-container">
                                    <form action="/user/upload-meme" method="POST" enctype="multipart/form-data">
                                        <div class="form-row">
                                            <div class="form-group">
                                                <label for="meme">Select Meme Image</label>
                                                <input type="file" id="meme" name="meme" accept="image/*" required>
                                                <small style="color: var(--text-secondary);">Max size: 10MB. Upload your
                                                    best database security memes!</small>
                                            </div>
                                        </div>

                                        <div style="display: flex; justify-content: flex-end; margin-top: 2rem;">
                                            <button type="submit" class="cta-button">
                                                <i class="fas fa-upload"></i> Upload Meme
                                            </button>
                                        </div>
                                    </form>
                                </div>

                                <div class="tips-container"
                                    style="margin-top: 2rem; padding: 1.5rem; background-color: var(--secondary); border-radius: 8px;">
                                    <h3 style="color: var(--accent); margin-bottom: 1rem;">Security Tips</h3>
                                    <p>✅ Only upload images you own or have permission to use</p>
                                    <p>✅ Keep your memes related to database security</p>
                                    <p>✅ Remember that uploads are visible to all administrators</p>
                                    <p>✅ Upload funny content, but keep it professional</p>
                                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer class="footer">
            <div class="logo sansation-bold" style="margin-bottom: 1rem;">DBS<span>401</span></div>
            <ul class="footer-links">
                <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                <li><a href="#"><i class="fab fa-linkedin"></i></a></li>
                <li><a href="#"><i class="fab fa-github"></i></a></li>
                <li><a href="#"><i class="fab fa-discord"></i></a></li>
            </ul>
            <p>© 2023 Database Security 401. All rights reserved.</p>
        </footer>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const fileInput = document.getElementById('meme');
                const fileLabel = document.querySelector('label[for="meme"]');

                // Update label with selected filename
                fileInput.addEventListener('change', function () {
                    if (fileInput.files.length > 0) {
                        fileLabel.textContent = 'Selected: ' + fileInput.files[0].name;
                    } else {
                        fileLabel.textContent = 'Select Meme Image';
                    }
                });
            });
        </script>

        <!-- Dropdown Menu Script -->
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Select all dropdown elements
                const dropdowns = document.querySelectorAll('.dropdown');

                // For each dropdown found
                dropdowns.forEach(dropdown => {
                    // Try to find the trigger element (could be either class)
                    const toggleBtn = dropdown.querySelector('.dropdown-toggle') ||
                        dropdown.querySelector('.dropdown-trigger');

                    if (toggleBtn) {
                        // Add click event
                        toggleBtn.addEventListener('click', function (e) {
                            e.preventDefault();
                            // Toggle active class
                            dropdown.classList.toggle('active');

                            // Find and toggle dropdown menu
                            const menu = dropdown.querySelector('.dropdown-menu');
                            if (menu) {
                                menu.classList.toggle('show');
                                // Force display style for compatibility
                                menu.style.display = menu.classList.contains('show') ? 'block' : 'none';
                            }

                            // Close other dropdowns
                            dropdowns.forEach(other => {
                                if (other !== dropdown && other.classList.contains('active')) {
                                    other.classList.remove('active');
                                    const otherMenu = other.querySelector('.dropdown-menu');
                                    if (otherMenu) {
                                        otherMenu.classList.remove('show');
                                        otherMenu.style.display = 'none';
                                    }
                                }
                            });
                        });
                    }
                });

                // Close dropdowns when clicking outside
                document.addEventListener('click', function (e) {
                    if (!e.target.closest('.dropdown')) {
                        dropdowns.forEach(dropdown => {
                            dropdown.classList.remove('active');
                            const menu = dropdown.querySelector('.dropdown-menu');
                            if (menu) {
                                menu.classList.remove('show');
                                menu.style.display = 'none';
                            }
                        });
                    }
                });
            });
        </script>
</body>

</html>